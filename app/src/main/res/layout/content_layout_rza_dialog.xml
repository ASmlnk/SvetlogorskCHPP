<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_rza_content_dialog"
    android:orientation="vertical"
    android:paddingBottom="64dp">

    <TextView
        android:id="@+id/tv_automation_title"
        style="@style/TextViewStyleContentHomePageSubsection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="24dp"
        android:text="@string/automation"
        android:textColor="#A0C0A1" />

    <TextView
        android:id="@+id/tv_automation_content"
        style="@style/TextViewStyleContentHomePageSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="16dp"
        android:text="34, 52, 53"
        android:textColor="@color/calendar_background"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/tv_apv_title"
        style="@style/TextViewStyleContentHomePageSubsection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="24dp"
        android:text="@string/apv_s"
        android:textColor="@color/text_content_rza" />

    <TextView
        android:id="@+id/tv_apv_content"
        style="@style/TextViewStyleContentHomePageSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="16dp"
        android:text="1.5/20"
        android:textColor="@color/calendar_background"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/tv_protection_title"
        style="@style/TextViewStyleContentHomePageSubsection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="24dp"
        android:textSize="22sp"
        android:fontFamily="@font/nunito"
        android:gravity="center"
        android:textStyle="bold"
        android:text="@string/protection"
        android:textColor="@color/text_content_rza" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="4dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />


</LinearLayout>