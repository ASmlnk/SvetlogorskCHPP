<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/CardViewDialogContentStyle"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="8dp"
    android:background="@color/ory_key_background"
    app:cardCornerRadius="20dp"
    app:strokeColor="@color/ory_key_background"
    app:strokeWidth="1dp">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_item_lingthing"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_name"
                style="@style/TextViewStyleContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:text="@string/electrical_assembly"
                android:textColor="#544A30"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_name_department"
                style="@style/TextViewStyleContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:text="@string/electrical_assembly"
                android:textColor="@color/backgroundItem"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="8dp"

            android:gravity="center_vertical"
            android:orientation="vertical">

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="20dp"
                android:layout_height="20dp"

                android:layout_gravity="end"
                android:src="@drawable/icon_idea"
                app:tint="@color/ory_key_background" />


            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/iv"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_gravity="center"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="8dp"
                android:src="@drawable/electrical_panel_1"
                app:tint="@color/ory_key_background" />

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_delete"
            android:layout_width="66dp"
            android:paddingHorizontal="12dp"
            android:visibility="gone"
            android:background="@color/delete_background"
            android:src="@drawable/delete"
            app:tint="@color/text_input_assembly"
            android:layout_height="match_parent"/>


    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
