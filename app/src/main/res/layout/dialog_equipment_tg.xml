                android:layout_marginTop="8dp"
                android:fontFamily="@font/actor"
                android:gravity="start"
                android:text="расшифровка\n\nГазовый объем генератора: 50м/"
                android:textColor="@color/text_color_dialog_equipment"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/background_layout_line_gradient2"
                android:orientation="vertical" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_panel_title"
                    style="@style/TextViewStyleContentHomePageSubsection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginEnd="16dp"
                    android:text="@string/panel"
                    android:textColor="#567993" />

                <TextView
                    android:id="@+id/tv_panel_content"
                    style="@style/TextViewStyleContentHomePageSection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="16dp"
                    android:text="34, 52, 53"
                    android:textColor="@color/home_page_gradient"
                    android:textStyle="normal" />

            </LinearLayout>

            <include
                android:id="@+id/content_rza"
                layout="@layout/content_layout_rza_equipment_dialog" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-24dp"
                android:background="@drawable/background_dialog_tr_content"
                android:orientation="vertical">


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_power_supply"
                    android:layout_marginTop="16dp"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginBottom="24dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layoutManager="androidx.recyclerview.widget.StaggeredGridLayoutManager"
                    app:spanCount="3"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="@drawable/background_layout_line_gradient"
                    android:orientation="vertical" />

                <TextView
                    android:id="@+id/tv_generator_start_title"
                    style="@style/TextViewStyleContentHomePageSubsection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginEnd="16dp"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:text="@string/generator_start"
                    android:textColor="@color/home_page_gradient" />

                <TextView
                    android:id="@+id/tv_generator_start_content"
                    style="@style/TextViewStyleContentHomePageSubsection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="8dp"
                    android:paddingBottom="16dp"
                    android:fontFamily="@font/actor"
                    android:gravity="start"
                    android:text="расшифровка\n\nГазовый объем генератора: 50м/"
                    android:textColor="@color/text_color_dialog_equipment"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tv_translation_into_rv_title"
                    style="@style/TextViewStyleContentHomePageSubsection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginEnd="16dp"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:text="@string/translation_into_rv"
                    android:textColor="@color/home_page_gradient" />

                <TextView
                    android:id="@+id/tv_translation_into_rv_content"
                    style="@style/TextViewStyleContentHomePageSubsection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="8dp"
                    android:paddingBottom="16dp"
                    android:fontFamily="@font/actor"
                    android:gravity="start"
                    android:text="расшифровка\n\nГазовый объем генератора: 50м/"
                    android:textColor="@color/text_color_dialog_equipment"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tv_translation_from_rv_title"
                    style="@style/TextViewStyleContentHomePageSubsection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginEnd="16dp"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:text="@string/translation_from_rv"
                    android:textColor="@color/home_page_gradient" />

                <TextView
                    android:id="@+id/tv_translation_from_rv_content"
                    style="@style/TextViewStyleContentHomePageSubsection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="8dp"
                    android:paddingBottom="16dp"
                    android:fontFamily="@font/actor"
                    android:gravity="start"
                    android:text="расшифровка\n\nГазовый объем генератора: 50м/"
                    android:textColor="@color/text_color_dialog_equipment"
                    android:textSize="20sp" />



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/background_layout_line_gradient"
                    android:orientation="vertical" />

                <TextView
                    android:id="@+id/tv_additionally_generator"
                    style="@style/TextViewStyleContentHomePageSubsection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:fontFamily="@font/actor"
                    android:gravity="start"
                    android:text="ajsdlfjalj\nalsdjfljasldj\nalsdjfljasldj\nalsdjfljasldj"
                    android:textColor="@color/text_color_dialog_equipment"
                    android:textSize="20sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="@drawable/background_layout_line_gradient"
                    android:orientation="vertical" />

                <TextView
                    android:id="@+id/tv_additionally_turbin"
                    style="@style/TextViewStyleContentHomePageSubsection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:fontFamily="@font/actor"
                    android:gravity="start"
                    android:paddingBottom="24dp"
                    android:text="ajsdlfjalj\nalsdjfljasldj\nalsdjfljasldj\nalsdjfljasldj"
                    android:textColor="@color/text_color_dialog_equipment"
                    android:textSize="20sp" />

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>