<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shift_schedule_dialog_sorted_background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_name"
            style="@style/TextViewStyleContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:text="АТ-4"
            android:textSize="32sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/background_item_tr_parameter_dialog"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_type_generator"
                    style="@style/TextViewStyleContentHomePageSection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:paddingStart="16dp"
                    android:paddingTop="16dp"
                    android:paddingEnd="8dp"
                    android:text="ТВ-50-2"
                    android:textColor="@color/ory_key_background"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/tv_type_turbin"
                    style="@style/TextViewStyleContentHomePageSection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:paddingStart="16dp"
                    android:paddingTop="4dp"
                    android:paddingEnd="8dp"
                    android:text="Р-15-90/10"
                    android:textColor="@color/ory_key_background"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/tv_type_parameter"
                    style="@style/TextViewStyleContentHomePageSubsection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:paddingStart="16dp"
                    android:paddingEnd="8dp"
                    android:layout_marginTop="8dp"
                    android:paddingBottom="4dp"
                    android:text="15МВт  72ГКал  168,4т/ч"
                    android:textColor="@color/text_content_rza"
                    android:textSize="20sp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/background_dialog_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="4dp">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/iv_edit_content"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_gravity="end"
                android:layout_marginEnd="8dp"
                android:src="@drawable/baseline_edit_24"
                android:tint="@color/home_page_gradient" />

            <TextView
                android:id="@+id/tv_switch_title"
                style="@style/TextViewStyleContentHomePageSubsection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:text="@string/switch_ory_parameter"
                android:textColor="@color/text_recycle_smile" />

            <TextView
                android:id="@+id/tv_switch_content"
                style="@style/TextViewStyleContentHomePageSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="16dp"
                android:text="djajjajdajaldjflaj"
                android:textColor="@color/home_page_gradient" />

            <TextView
                android:id="@+id/tv_instr_title"
                style="@style/TextViewStyleContentHomePageSubsection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="16dp"
                android:text="@string/instrument_transformer"
                android:textColor="@color/text_recycle_smile" />

            <TextView
                android:id="@+id/tv_instr_content"
                style="@style/TextViewStyleContentHomePageSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="16dp"
                android:text="djajjajdajaldjflaj"
                android:textColor="@color/home_page_gradient" />

            <TextView
                android:id="@+id/tv_generator_title"
                style="@style/TextViewStyleContentHomePageSubsection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="16dp"
                android:text="@string/generator"
                android:textColor="@color/text_recycle_smile" />

            <TextView
                android:id="@+id/tv_transcript_type_generator_content"
                style="@style/TextViewStyleContentHomePageSubsection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/actor"
                android:gravity="start"
                android:text="расшифровка\n\nГазовый объем генератора: 50м/"
                android:textColor="@color/text_color_dialog_equipment"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_source_excitation_title"
                style="@style/TextViewStyleContentHomePageSubsection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="16dp"
                android:text="@string/source_excitation"
                android:textColor="@color/text_recycle_smile" />

            <TextView
                android:id="@+id/tv_source_excitation_content"
                style="@style/TextViewStyleContentHomePageSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="16dp"
                android:text="djajjajdajaldjflaj"
                android:textColor="@color/home_page_gradient" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/background_layout_line_gradient2"
                android:orientation="vertical" />

            <TextView
                android:id="@+id/tv_turbin_title"
                style="@style/TextViewStyleContentHomePageSubsection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="16dp"
                android:text="@string/turbin"
                android:textColor="@color/text_recycle_smile" />

            <TextView
                android:id="@+id/tv_transcript_type_turbin_content"
                style="@style/TextViewStyleContentHomePageSubsection"
