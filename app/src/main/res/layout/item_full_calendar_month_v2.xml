<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/item_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_calendar_month"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_calendar_date"
            style="@style/TextAppearance.MaterialComponents.Subtitle1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center"
            android:layout_margin="3dp"
            android:gravity="center"
            android:textStyle="bold"
            android:paddingTop="2dp"
            android:paddingBottom="10dp"
            android:textColor="@color/calendar_background"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:alpha="0.3"
            android:background="@drawable/home_background" />

        <LinearLayout
            android:id="@+id/layout_shift"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="1dp"
            android:layout_marginStart="1dp"
            android:alpha="0.5"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_shift"
                style="@style/TextAppearance.MaterialComponents.Subtitle1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="A"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="6dp"
                android:textColor="@color/chip_appbar"
                android:textSize="16sp" />
        </LinearLayout>

    </LinearLayout>
</layout>