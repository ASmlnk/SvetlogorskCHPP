<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_switch_title"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="24dp"
            android:textColor="@color/text_recycle_smile"
            android:layout_height="wrap_content"
            style="@style/TextViewStyleContentHomePageSubsection"
            android:text="@string/switch_ory_parameter"/>

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_edit_content"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="bottom"
            android:layout_marginEnd="16dp"
            android:tint="#C06C04"
            android:src="@drawable/baseline_edit_24"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_switch_content"
        android:layout_width="match_parent"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="4dp"
        android:layout_marginStart="40dp"
        android:textColor="@color/home_page_gradient"
        android:layout_height="wrap_content"
        style="@style/TextViewStyleContentHomePageSection"
        android:text="djajjajdajaldjflaj"/>

    <TextView
        android:id="@+id/tv_instr_title"
        android:layout_width="match_parent"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="24dp"
        android:textColor="@color/text_recycle_smile"
        android:layout_height="wrap_content"
        style="@style/TextViewStyleContentHomePageSubsection"
        android:text="@string/instrument_transformer"/>

    <TextView
        android:id="@+id/tv_instr_content"
        android:layout_width="match_parent"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="4dp"
        android:layout_marginStart="40dp"
        android:textColor="@color/home_page_gradient"
        android:layout_height="wrap_content"
        style="@style/TextViewStyleContentHomePageSection"
        android:text="djajjajdajaldjflaj"/>

    <LinearLayout
        android:id="@+id/layout_shr"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="32dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_shr1"
            style="@style/TextViewStyleContent"
            android:layout_width="48dp"
            android:layout_marginStart="16dp"
            android:gravity="center"
            android:text="@string/shr_1"
            android:textColor="@color/floatingActionButton"
            android:textSize="16sp"
            android:textStyle="bold" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_shr1"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@drawable/background_home_page_search"
            android:src="@drawable/background_key_1_ory"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize20Percent" />

        <TextView
            android:id="@+id/tv_shr2"
            style="@style/TextViewStyleContent"
            android:layout_width="48dp"
            android:layout_marginStart="8dp"
            android:text="@string/shr_2"
            android:gravity="center"
            android:textColor="@color/floatingActionButton"
            android:textSize="16sp"
            android:textStyle="bold" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_shr2"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@drawable/background_home_page_search"
            android:layout_marginEnd="20dp"
            android:scaleType="centerInside"
            android:src="@drawable/background_key_2_ory"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize20Percent" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_lr"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_lr"
            style="@style/TextViewStyleContent"
            android:layout_width="48dp"
            android:layout_marginStart="16dp"
            android:gravity="center"
            android:text="@string/lr_tr"
            android:textColor="@color/floatingActionButton"
            android:textSize="16sp"
            android:textStyle="bold" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_lr"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@drawable/background_home_page_search"
            android:src="@drawable/background_key_1_ory"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize20Percent" />

        <TextView
            android:id="@+id/tv_or"
            style="@style/TextViewStyleContent"
            android:layout_width="48dp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/floatingActionButton"
            android:layout_marginStart="8dp"
            android:text="@string/or"
            android:textSize="16sp" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_or"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@drawable/background_home_page_search"
            android:layout_marginEnd="20dp"
            android:scaleType="centerInside"
            android:src="@drawable/background_key_2_ory"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize20Percent" />

    </LinearLayout>

</LinearLayout>