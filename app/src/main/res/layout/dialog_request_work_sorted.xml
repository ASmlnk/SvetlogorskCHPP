<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dialog_fragment"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shift_schedule_dialog_personal_background"
    tools:context=".__presentation.shift_schedule.dialog.ShiftScheduleStaffDialog">

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="100dp"
        android:layout_height="6dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/calendar_fragment_kontur_revers"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imageView6"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/baseline_sort_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/text_input_assembly" />

    <TextView
        android:id="@+id/tvNameDialog"
        style="@style/TextViewStyleContent"
        android:layout_width="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:gravity="center"
        android:text="@string/sorted_request_work"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imageView6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView6"
        app:layout_constraintTop_toTopOf="@+id/imageView6" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_select_date_open"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/baseline_check_24"
        app:layout_constraintBottom_toBottomOf="@+id/tv_sorted_date_open"
        app:layout_constraintEnd_toStartOf="@+id/tv_sorted_date_open"
        app:layout_constraintTop_toTopOf="@+id/tv_sorted_date_open"
        app:tint="@color/calendar_background" />

    <TextView
        android:id="@+id/tv_sorted_date_open"
        style="@style/TextViewStyleContent"
        android:layout_width="0dp"
        android:layout_marginStart="96dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="8dp"
        android:text="@string/sorted_date_open"
        android:textColor="@color/calendar_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvNameDialog" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_select_date_close"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/baseline_check_24"
        app:layout_constraintBottom_toBottomOf="@+id/tv_sorted_date_close"
        app:layout_constraintEnd_toStartOf="@+id/tv_sorted_date_close"
        app:layout_constraintTop_toTopOf="@+id/tv_sorted_date_close"
        app:tint="@color/calendar_background" />

    <TextView
        android:id="@+id/tv_sorted_date_close"
        style="@style/TextViewStyleContent"
        android:layout_width="0dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        android:text="@string/sorted_date_close"
        android:textColor="@color/calendar_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tv_sorted_date_open"
        app:layout_constraintTop_toBottomOf="@+id/tv_sorted_date_open" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_select_date_number"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/baseline_check_24"
        app:layout_constraintBottom_toBottomOf="@+id/tv_sorted_number"
        app:layout_constraintEnd_toStartOf="@+id/tv_sorted_number"
        app:layout_constraintTop_toTopOf="@+id/tv_sorted_number"
        app:tint="@color/calendar_background" />

    <TextView
        android:id="@+id/tv_sorted_number"
        style="@style/TextViewStyleContent"
        android:layout_width="0dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="32dp"
        android:text="@string/sorted_number"
        android:textColor="@color/calendar_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tv_sorted_date_close"
        app:layout_constraintTop_toBottomOf="@+id/tv_sorted_date_close" />
</androidx.constraintlayout.widget.ConstraintLayout>