<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shift_schedule_dialog_sorted_background"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_name"
            style="@style/TextViewStyleContent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginVertical="16dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_weight="1"
            android:text="КРУ-3,15кВ 1С"
            android:textSize="24sp"
            android:textStyle="bold" />

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="40dp"
            android:id="@+id/iv_lighting"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="24dp"
            android:src="@drawable/icon_idea" />

    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_dialog_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="4dp">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/iv_edit_content"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_gravity="end"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/baseline_edit_24"
                android:tint="@color/text_content_rza_2" />

            <TextView
                android:id="@+id/tv_power_supply"
                style="@style/TextViewStyleContentHomePageSubsection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="8dp"
                android:text="@string/power_supply"
                android:textColor="@color/text_recycle_smile" />

            <TextView
                android:id="@+id/tv_power_supply_content"
                style="@style/TextViewStyleContentHomePageSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="16dp"
                android:layout_marginEnd="16dp"
                android:text="djajjajdajaldjflaj"
                android:textColor="@color/home_page_gradient" />

            <TextView
                android:id="@+id/tv_switch_title"
                style="@style/TextViewStyleContentHomePageSubsection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"

                android:layout_marginEnd="8dp"
                android:text="@string/switch_automat"
                android:textColor="@color/text_recycle_smile" />

            <TextView
                android:id="@+id/tv_switch_content"
                style="@style/TextViewStyleContentHomePageSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="24dp"
                android:layout_marginEnd="16dp"
                android:text="djajjajdajaldjflaj"
                android:textColor="@color/home_page_gradient" />

            <com.google.android.material.card.MaterialCardView
                style="@style/CardViewDialogContentStyle"
                android:layout_marginBottom="24dp">

                <TextView
                    android:id="@+id/tv_location"
                    style="@style/TextViewStyleContentBigText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginVertical="10dp"
                    android:layout_marginTop="4dp"
                    android:gravity="start"
                    android:text="расшифровка\n\nГазовый объем генератора: 50м/"
                    android:textColor="@color/text_color_dialog_equipment"
                    android:textSize="20sp" />
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                style="@style/CardViewDialogContentStyle"
                android:layout_marginBottom="24dp">

                <TextView
                    android:id="@+id/tv_additionally"
                    style="@style/TextViewStyleContentBigText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginVertical="10dp"
                    android:layout_marginTop="4dp"
                    android:gravity="start"
                    android:text="расшифровка\n\nГазовый объем генератора: 50м/"
                    android:textColor="@color/text_color_dialog_equipment"
                    android:textSize="20sp" />
            </com.google.android.material.card.MaterialCardView>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_power_supply"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"

                android:layout_marginEnd="16dp"
                android:layout_marginBottom="24dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                 />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>