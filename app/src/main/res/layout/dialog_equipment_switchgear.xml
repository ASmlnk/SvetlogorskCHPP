<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/shift_schedule_dialog_sorted_background"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_name"
        style="@style/TextViewStyleContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="КРУ-3,15кВ 1С"
        android:textSize="24sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_voltage"
            style="@style/TextViewStyleContentHomePageSubsection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="start"
            android:paddingStart="16dp"
            android:paddingEnd="8dp"
            android:text="3.15 кВ"
            android:textColor="@color/text_content_rza"
            android:textSize="20sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/tv_name_department"
            style="@style/TextViewStyleContentHomePageSubsection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="start"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:text="Градирня"
            android:textColor="@color/text_content_rza"
            android:textSize="20sp" />

    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/background_dialog_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="4dp">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/iv_edit_content"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_gravity="end"
                android:layout_marginEnd="8dp"
                android:src="@drawable/baseline_edit_24"
                android:tint="@color/home_page_gradient" />

            <TextView
                android:id="@+id/tv_main_power_source"
                style="@style/TextViewStyleContentHomePageSubsection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"

                android:layout_marginEnd="8dp"
                android:text="@string/main_power_source"
                android:textColor="@color/text_recycle_smile" />

            <TextView
                android:id="@+id/tv_main_power_source_content"
                style="@style/TextViewStyleContentHomePageSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="16dp"
                android:text="djajjajdajaldjflaj"
                android:textColor="@color/home_page_gradient" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_power_source"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                app:layoutManager="androidx.recyclerview.widget.StaggeredGridLayoutManager"
                app:spanCount="2"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"/>

            <TextView
                android:id="@+id/tv_backup_power_supply"
                style="@style/TextViewStyleContentHomePageSubsection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="16dp"
                android:text="@string/backup_power_supply"
                android:textColor="@color/text_recycle_smile" />

            <TextView
                android:id="@+id/tv_backup_power_supply_content"
                style="@style/TextViewStyleContentHomePageSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="16dp"
                android:text="djajjajdajaldjflaj"
                android:textColor="@color/home_page_gradient" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_backup_power_supply"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                app:layoutManager="androidx.recyclerview.widget.StaggeredGridLayoutManager"
                app:spanCount="2"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"/>

            <TextView
                android:id="@+id/tv_switch_title"
                style="@style/TextViewStyleContentHomePageSubsection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="8dp"
                android:text="@string/switch_ory_parameter"
                android:textColor="@color/text_recycle_smile" />

            <TextView
                android:id="@+id/tv_switch_content"
                style="@style/TextViewStyleContentHomePageSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="16dp"
                android:text="djajjajdajaldjflaj"
                android:textColor="@color/home_page_gradient" />

            <TextView
                android:id="@+id/tv_instr_title"
                style="@style/TextViewStyleContentHomePageSubsection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="16dp"
                android:text="@string/instrument_transformer"
                android:textColor="@color/text_recycle_smile" />

            <TextView
                android:id="@+id/tv_instr_content"
                style="@style/TextViewStyleContentHomePageSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="16dp"
                android:text="djajjajdajaldjflaj"
                android:textColor="@color/home_page_gradient" />

            <com.google.android.material.card.MaterialCardView
                android:layout_marginTop="16dp"
                android:layout_marginBottom="24dp"
                style="@style/CardViewDialogContentStyle">

                <TextView
                    android:id="@+id/tv_info"
                    style="@style/TextViewStyleContentBigText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginVertical="10dp"
                    android:layout_marginTop="4dp"
                    android:gravity="start"
                    android:text="расшифровка\n\nГазовый объем генератора: 50м/"
                    android:textColor="@color/text_color_dialog_equipment"
                    android:textSize="20sp" />
            </com.google.android.material.card.MaterialCardView>

            <include
                android:id="@+id/content_rza"
                layout="@layout/content_layout_rza_equipment_dialog" />

            <LinearLayout
                android:id="@+id/layout_additionally"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-24dp"
                android:background="@drawable/background_dialog_tr_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_additionally"
                    style="@style/TextViewStyleContentBigText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="48dp"
                    android:gravity="start"
                    android:text="ajsdlfjalj\nalsdjfljasldj\nalsdjfljasldj\nalsdjfljasldj"
                    android:textColor="@color/text_color_dialog_equipment"
                    android:textSize="20sp" />

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>