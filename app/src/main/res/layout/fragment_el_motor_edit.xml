<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/app_widget_inner_view_background"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/TextViewStyleHeading"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:gravity="center"
                android:text="@string/electric_motor_title" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/iv_update"
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:tint="@color/text_recycle_smile"
                android:paddingTop="8dp"
                android:paddingEnd="8dp"
                android:paddingStart="2dp"
                android:src="@drawable/baseline_wifi_protected_setup_24"/>
        </LinearLayout>

        <TextView
            style="@style/TextViewStyleContent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="@string/name_electrical"
            android:textSize="14sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/et_name"
            style="@style/EditTestStyleElectricalEquipment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:hint="@string/name"
            android:imeOptions="flagNoEnterAction"
            android:inputType="textMultiLine|text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/et_switch"
            style="@style/EditTestStyleElectricalEquipment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="24dp"
            android:hint="@string/switch_ory_parameter"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/et_instrument_transformer"
            style="@style/EditTestStyleElectricalEquipment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="8dp"
            android:hint="@string/instrument_transformer"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            style="@style/TextViewStyleContent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:text="@string/control_circuits"
            android:textSize="14sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/et_control_circuits"
            style="@style/EditTestStyleElectricalEquipment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:autofillHints="name"
            android:hint="@string/control_circuits"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            style="@style/TextViewStyleContent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="@string/additionally"
            android:textSize="14sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/et_additionally"
            style="@style/EditTestStyleElectricalEquipment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:autofillHints="name"
            android:hint="@string/additionally"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/background_content_parameter_ory"
            android:orientation="vertical">

            <TextView
                style="@style/TextViewStyleContent"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"
                android:text="@string/electric_motor"
                android:textColor="@color/text_content_rza"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                style="@style/TextViewStyleContent"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="@string/type"
                android:textSize="14sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_type_el_motor"
                style="@style/EditTestStyleElectricalEquipment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:autofillHints="name"
                android:hint="@string/type" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/TextViewStyleContent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginVertical="13dp"
                    android:layout_marginStart="16dp"
                    android:text="@string/el_motor_power_title"
                    android:textSize="18sp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <EditText
                    android:id="@+id/et_el_motor_power"
                    style="@style/EditTestStyleElectricalEquipment"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:autofillHints="name"
                    android:hint="@string/type_el_motor_power_title" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/TextViewStyleContent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginVertical="13dp"
                    android:layout_marginStart="16dp"
                    android:text="@string/i_el_motor_item_title"
                    android:textSize="18sp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <EditText
                    android:id="@+id/et_el_motor_i"
                    style="@style/EditTestStyleElectricalEquipment"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:autofillHints="name"
                    android:hint="@string/type_i_el_motor_item_title" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/TextViewStyleContent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginVertical="13dp"
                    android:layout_marginStart="16dp"
                    android:text="@string/mechanism_n_title"
                    android:textSize="18sp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <EditText
                    android:id="@+id/et_el_motor_n"
                    style="@style/EditTestStyleElectricalEquipment"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:autofillHints="name"
                    android:hint="@string/type_mechanism_n_title" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="16dp"
                android:orientation="horizontal">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_rep"
                    style="@style/ChipShiftSchedule"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="@string/rep" />

                <EditText
                    android:id="@+id/et_type_rep"
                    style="@style/EditTestStyleElectricalEquipment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:autofillHints="name"
                    android:hint="@string/type_rep" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:background="@drawable/background_content_parameter_ory"
            android:orientation="vertical">

            <TextView
                style="@style/TextViewStyleContent"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"
                android:text="@string/mechanism"
                android:textColor="@color/text_content_rza"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                style="@style/TextViewStyleContent"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="@string/type"
                android:textSize="14sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_type_mechanism"
                style="@style/EditTestStyleElectricalEquipment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:autofillHints="name"
                android:hint="@string/type" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/TextViewStyleContent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginVertical="13dp"
                    android:layout_marginStart="16dp"
                    android:text="@string/performance_mechanism_title"
                    android:textSize="18sp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <EditText
                    android:id="@+id/et_performance_mechanism"
                    style="@style/EditTestStyleElectricalEquipment"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:autofillHints="name"
                    android:hint="@string/type_performance_mechanism_title" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/TextViewStyleContent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginVertical="13dp"
                    android:layout_marginStart="16dp"
                    android:text="@string/pressure_mechanism_title"
                    android:textSize="18sp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <EditText
                    android:id="@+id/et_pressure_mechanism"
                    style="@style/EditTestStyleElectricalEquipment"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:autofillHints="name"
                    android:hint="@string/type_pressure_mechanism_title" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/TextViewStyleContent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginVertical="13dp"
                    android:layout_marginStart="16dp"
                    android:text="@string/mechanism_h_title"
                    android:textSize="18sp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <EditText
                    android:id="@+id/et_mechanism_h"
                    style="@style/EditTestStyleElectricalEquipment"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:autofillHints="name"
                    android:hint="@string/type_mechanism_h_title" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/TextViewStyleContent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginVertical="13dp"
                    android:layout_marginStart="16dp"
                    android:text="@string/mechanism_n_power_title"
                    android:textSize="18sp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <EditText
                    android:id="@+id/et_mechanism_n_power"
                    style="@style/EditTestStyleElectricalEquipment"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:autofillHints="name"
                    android:hint="@string/type_mechanism_n_power_title" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/TextViewStyleContent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginVertical="13dp"
                    android:layout_marginStart="16dp"
                    android:text="@string/mechanism_n_title"
                    android:textSize="18sp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <EditText
                    android:id="@+id/et_mechanism_n"
                    style="@style/EditTestStyleElectricalEquipment"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:autofillHints="name"
                    android:hint="@string/type_mechanism_n_title" />

            </LinearLayout>

            <TextView
                style="@style/TextViewStyleContent"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="@string/additionally"
                android:textSize="14sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_additionally_mechanism"
                style="@style/EditTestStyleElectricalEquipment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:autofillHints="name"
                android:hint="@string/additionally"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:orientation="horizontal">

            <TextView
                style="@style/TextViewStyleContent"
                android:layout_gravity="center_vertical"
                android:layout_marginVertical="13dp"
                android:layout_marginStart="16dp"
                android:text="@string/voltage_name"
                android:textSize="18sp"
                android:textStyle="bold" />

            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2" />

            <Spinner
                android:id="@+id/spinner_voltage"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="16dp"
                android:layout_weight="3"
                android:background="@drawable/shift_schedule_compound_shift_inspection"
                android:dropDownWidth="166dp"
                android:gravity="center"
                android:popupBackground="@drawable/background_spinner"
                android:spinnerMode="dropdown" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                style="@style/TextViewStyleContent"
                android:layout_width="0dp"
                android:layout_gravity="center_vertical"
                android:layout_marginVertical="13dp"
                android:layout_marginStart="16dp"
                android:layout_weight="1"
                android:text="@string/ceh"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spinner_general_category"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="16dp"
                android:layout_weight="2"
                android:background="@drawable/shift_schedule_compound_shift_inspection"
                android:dropDownWidth="166dp"
                android:gravity="center"
                android:popupBackground="@drawable/background_spinner"
                android:spinnerMode="dropdown" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                style="@style/TextViewStyleContent"
                android:layout_width="0dp"
                android:layout_gravity="center_vertical"
                android:layout_marginVertical="13dp"
                android:layout_marginStart="16dp"
                android:layout_weight="1"
                android:text="@string/place"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spinner_category"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="16dp"
                android:layout_weight="2"
                android:background="@drawable/shift_schedule_compound_shift_inspection"
                android:dropDownWidth="166dp"
                android:gravity="center"
                android:popupBackground="@drawable/background_spinner"
                android:spinnerMode="dropdown" />

        </LinearLayout>

        <TextView
            style="@style/TextViewStyleContent"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:text="@string/power_supply"
            android:textColor="@color/color_request_work_calendar"
            android:textSize="24sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:background="@drawable/shift_schedule_note_background"
            android:baselineAligned="false"
            android:orientation="vertical"
            android:paddingVertical="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/b_add_power_supply"
                    style="@style/ButtonStyleRequestWork"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="12dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:layout_weight="1"
                    android:gravity="start|center"
                    android:text="@string/add"
                    app:icon="@drawable/baseline_add_24" />

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/iv_delete_power_supply"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginHorizontal="24dp"
                    android:src="@drawable/delete" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_power_supply_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_power_supply_name"
                    style="@style/TextViewStyleContent"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="4dp"
                    android:layout_weight="3"
                    android:text="Секция 3,15кВ"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/et_power_supply_cell"
                    style="@style/EditTestStyleElectricalEquipment"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_weight="1"
                    android:hint="@string/cell_number" />

            </LinearLayout>

        </LinearLayout>

        <include
            android:id="@+id/content_rza"
            layout="@layout/content_layout_edit_rza" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/b_save"
            style="@style/ButtonStyleRequestWork"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="320dp"
            android:text="@string/apply" />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>