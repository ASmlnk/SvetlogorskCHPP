<resources>

    <style name="Widget.SvetlogorskCHPP.AppWidget.Container" parent="android:Widget">
        <item name="android:id">@android:id/background</item>
        <item name="android:background">?android:attr/colorBackground</item>
    </style>

    <style name="Widget.SvetlogorskCHPP.AppWidget.InnerView" parent="android:Widget">
        <item name="android:background">?android:attr/colorBackground</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="BaseTextViewStyle">
        <item name="android:fontFamily">@font/ru_hero</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextViewStyleHeading" parent="BaseTextViewStyle">
        <item name="android:textColor">@color/orange_zero_vision</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="TextViewStyleContent" parent="BaseTextViewStyle">
        <item name="android:textColor">@color/text_input_assembly</item>
        <item name="android:hyphenationFrequency">full</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextViewStyleContentBigText" parent="BaseTextViewStyle">
        <item name="android:textColor">@color/text_input_assembly</item>
        <item name="android:hyphenationFrequency">full</item>
        <item name="android:lineSpacingExtra">6dp</item>
        <item name="android:fontFamily">@font/tahoma</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextViewStyleContentHomePageSection" parent="BaseTextViewStyle">
        <item name="android:textColor">@color/text_recycle</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextViewStyleContentHomePageSubsection" parent="BaseTextViewStyle">
        <item name="android:textColor">@color/floatingActionButton</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="EditTestStyleRequestWork" parent="BaseTextViewStyle">
        <item name="android:background">@drawable/background_edit_text</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:inputType">textMultiLine</item>
        <item name="android:imeOptions">actionNone</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:textCursorDrawable">@drawable/cursor_color_edit_text</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="android:textColor">@color/name_devices_appbar</item>
        <item name="android:textColorHint">@color/text_recycle_smile</item>
    </style>

    <style name="EditTestStyleElectricalEquipment" parent="BaseTextViewStyle">
        <item name="android:background">@drawable/background_edit_text</item>
        <item name="android:inputType">textMultiLine|text</item>
        <item name="android:imeOptions">flagNoEnterAction</item>
        <item name="android:textSize">19sp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:textColorHighlight">@color/text_recycle_smile</item>
        <item name="android:textCursorDrawable">@drawable/cursor_color_edit_text</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textColor">@color/name_devices_appbar</item>
        <item name="android:textColorHint">@color/text_recycle_smile</item>
    </style>

    <style name="ButtonStyleRequestWork" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="cornerRadius">8dp</item>
        <item name="elevation">4dp</item>
        <item name="strokeColor">@color/floatingActionButton</item>
        <item name="strokeWidth">1dp</item>
        <item name="iconTint">@color/light_blue_200</item>
        <item name="android:textColor">@color/name_devices_appbar</item>
    </style>

    <style name="ButtonStyleRequestWorkSave" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="elevation">4dp</item>
        <item name="cornerRadius">8dp</item>
        <item name="strokeColor">@color/calendar_background</item>
        <item name="strokeWidth">1dp</item>
        <item name="backgroundTint">@color/red_danger</item>
        <item name="iconTint">@color/calendar_background</item>
        <item name="android:textColor">@color/calendar_background</item>
    </style>

    <style name="ButtonStyleRequestWorkEdit" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="elevation">4dp</item>
        <item name="cornerRadius">8dp</item>
        <item name="strokeColor">@color/calendar_background</item>
        <item name="strokeWidth">1dp</item>
        <item name="backgroundTint">@color/text_recycle</item>
        <item name="iconTint">@color/light_blue_200</item>
        <item name="android:textColor">@color/name_devices_appbar</item>
    </style>

    <style name="ChipShiftSchedule" parent="ShiftScheduleChipStyle">
        <item name="android:fontFamily">@font/ru_hero</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/calendar_background</item>
        <item name="android:textStyle">bold</item>
        <item name="chipBackgroundColor">@color/chip_shif_schedule</item>
        <item name="chipCornerRadius">8dp</item>
        <item name="chipStrokeColor">@color/calendar_background</item>
        <item name="chipStrokeWidth">2dp</item>
        <item name="rippleColor">@color/text_recycle</item>

    </style>


</resources>