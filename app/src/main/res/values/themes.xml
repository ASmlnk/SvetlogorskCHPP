<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.SvetlogorskCHPP" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/text_recycle</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/text_recycle</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >@color/text_recycle</item>
        <!-- Customize your theme here. -->
        <item name="bottomNavigationStyle">@style/Widget.App.BottomNavigationView</item>
        <item name="windowActionBar">false</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>

    <style name="Widget.App.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomNavigationView</item>
    </style>

    <style name="ThemeOverlay.App.BottomNavigationView" parent="">
        <item name="colorPrimary">@color/text_recycle</item>
        <item name="colorOnPrimary">#8DBFE3</item>
    </style>

    <style name="Theme.Recyclerviewfastscrollerwithvaluelabel" parent="Theme.MaterialComponents">

    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet_background</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize10Percent" parent="">
        <item name="cornerSize">5%</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize15Percent" parent="">
        <item name="cornerSize">10%</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize20Percent" parent="">
        <item name="cornerSize">20%</item>
    </style>

    <style name="AppSearchView" parent="Widget.AppCompat.SearchView">
        <item name="android:editTextColor">@color/chip_appbar</item>
        <item name="android:textColor">@color/chip_appbar</item>
        <item name="fontFamily">@font/ru_hero</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="CustomSearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="queryBackground">@color/text_recycle_smile</item>
        <item name="iconifiedByDefault">false</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColorHighlight">@color/text_recycle_smile</item>
        <item name="android:textCursorDrawable">@drawable/cursor_color_edit_text2</item>
        <item name="android:editTextColor">@color/calendar_background</item>
        <item name="android:textColor">@color/calendar_background</item>
        <item name="android:textColorHint">@color/text_recycle_smile</item>
    </style>

    <style name="ShiftScheduleChipStyle" parent="Widget.MaterialComponents.Chip.Filter">
        <!-- Цвет фона Chip в состоянии checked -->
        <item name="chipBackgroundColor">@color/chip_shif_schedule</item>
        <!-- Цвет флажка -->
        <item name="checkedIconTint">@color/calendar_background</item>
    </style>

    <style name="ElectricMotorChipStyle" parent="Widget.MaterialComponents.Chip.Filter">
        <!-- Цвет флажка -->
        <item name="checkedIconTint">@color/floatingActionButton</item>
    </style>

    <style name="ShiftScheduleTechicalCheckBoxStyle" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/name_devices_appbar</item>
        <item name="colorControlActivated">@color/name_devices_appbar</item>
    </style>

    <style name="Theme.SvetlogorskCHPP.AppWidgetContainerParent" parent="@android:style/Theme.DeviceDefault">
        <!-- Radius of the outer bound of widgets to make the rounded corners -->
        <item name="appWidgetRadius">16dp</item>
        <!--
        Radius of the inner view's bound of widgets to make the rounded corners.
        It needs to be 8dp or less than the value of appWidgetRadius
        -->
        <item name="appWidgetInnerRadius">8dp</item>
    </style>

    <style name="Theme.SvetlogorskCHPP.AppWidgetContainer" parent="Theme.SvetlogorskCHPP.AppWidgetContainerParent">
        <!-- Apply padding to avoid the content of the widget colliding with the rounded corners -->
        <item name="appWidgetPadding">16dp</item>
    </style>



</resources>